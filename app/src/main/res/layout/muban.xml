<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/aaaaaaaaa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/muban_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/aaaaaaaaa"
            android:text="汽车名称" />

        <TextView
            android:id="@+id/muban_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/muban_name"
            android:layout_toRightOf="@id/aaaaaaaaa"
            android:text="简介" />

        <TextView
            android:id="@+id/muban_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/muban_name"
            android:layout_toRightOf="@id/muban_content"

            android:text="-----价格" />


    </RelativeLayout>

</LinearLayout>